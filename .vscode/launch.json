        "version": "0.2.0",
        "configurations": [
                {
                        "name": "Python: Current File",
                        "type": "python",
                        "request": "launch",
                        "program": "${file}",
                        "console": "integratedTerminal",
                        "justMyCode": true,
                        "cwd": "${workspaceFolder}",
                        "pythonArgs": ["-W", "default", "-X", "faulthandler"],
                        "env":
                        {
                                "PYTHONMALLOC": "debug",
                                "PYTHONASYNCIODEBUG": "1",
                                "NUMBA_COLOR_SCHEME": "no_color",
                                "NUMBA_HIGHLIGHT_DUMPS": "0",
                                "NUMBA_DISABLE_ERROR_MESSAGE_HIGHLIGHTING": "1",
                                "NUMBA_SHOW_HELP": "1"
                        }

                },
                {
                        "name": "Python: quotes_async.py",
                        "type": "python",
                        "request": "launch",
                        "program": "${workspaceFolder}/examples/quotes_async.py",
                        "console": "integratedTerminal",
                        "justMyCode": true,
                        "cwd": "${workspaceFolder}/examples"
                },
                {
                        "name": "Python: quotes_app.py",
                        "type": "python",
                        "request": "launch",
                        "program": "${workspaceFolder}/examples/quotes_app.py",
                        "console": "integratedTerminal",
                        "justMyCode": true,
                        "cwd": "${workspaceFolder}/examples"
                },
                {
                        "name": "Python: summary_app.py",
                        "type": "python",
                        "request": "launch",
                        "program": "${workspaceFolder}/examples/summary_app.py",
                        "console": "integratedTerminal",
                        "justMyCode": true,
                        "cwd": "${workspaceFolder}/examples"
                },
        ]
}
